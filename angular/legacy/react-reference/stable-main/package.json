{
  "name": "libertytax-pnl-webapp",
  "version": "0.5.0-preview.4",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:mobile": "playwright test --config=playwright.mobile.config.js",
    "test:performance": "lhci autorun",
    "test:github": "node scripts/github-test-integration.js",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "ai:generate-tests": "node scripts/ai-test-generator.js",
    "ai:audit-accessibility": "node scripts/automated-accessibility-audit.js",
    "ai:monitor-performance": "node scripts/automated-performance-monitor.js",
    "ai:full-audit": "npm run ai:audit-accessibility && npm run ai:monitor-performance",
    "deploy:staging": "echo 'Use GitHub Actions workflow: Deploy to Staging'"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.4.0",
    "vite": "^5.3.1",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}